{
    "name": "GitHub Stats",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Snapshot of your GitHub Stats. Code daily and get those green squares!",
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default-icon": "icon.png",
      "default-title": "Check GitHub Stats",
      "default_popup": "popup.html"
    },    
    "permissions": ["storage",
      "https://api.github.com/*"]
  }
  